rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rooms/{roomId} {
      // Anyone can try to get a room (to check existence/expiry)
      allow get: if true;
      // Anyone can create a room (anonymous auth will be handled by client)
      allow create: if request.auth != null;
      // Only authenticated users can update (extend) if not expired
      allow update: if request.auth != null && resource.data.expiresAt > request.time;
      
      match /messages/{messageId} {
        // Can read and write messages if the room is not expired
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/rooms/$(roomId)).data.expiresAt > request.time;
      }
    }
  }
}
